conda create --name mars python=3.7
conda activate mars
conda install pytorch=1.6.0 cudatoolkit=11.7 -c pytorch -y
conda install -c rdkit rdkit=2020.03.3 -y
pip install torch-scatter -f https://data.pyg.org/whl/torch-1.6.0+cu117.html
pip install torch-sparse -f https://data.pyg.org/whl/torch-1.6.0+cu117.html
pip install torch-cluster -f https://data.pyg.org/whl/torch-1.6.0+cu117.html
pip install torch-spline-conv -f https://data.pyg.org/whl/torch-1.6.0+cu117.html
pip install torch-geometric==2.0.2
pip install tensorboardX

